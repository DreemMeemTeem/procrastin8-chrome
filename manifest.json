{
  "name": "procrastin8",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Procrastin8 extension for Google Chrome",
  "homepage_url": "https://github.com/procrastin8",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Procrastin8",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "alarms",
    "contentSettings",
    "notifications",
    "tabs",
    "windows",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/inject/procrastin8.css"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/inject/procrastin8.js"
      ]
    }
  ]
}